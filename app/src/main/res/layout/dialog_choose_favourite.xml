<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/dialogOpenRequestDetailHeader"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/rounded_shape_dialog"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Любимые предметы"
            android:textColor="#202020"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/button_close"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="end|center"
            android:layout_marginEnd="20dp"
            android:background="?actionBarItemBackground"
            android:src="@drawable/ic_close" />

    </FrameLayout>
    <androidx.recyclerview.widget.RecyclerView
        app:layout_constraintTop_toBottomOf="@+id/dialogOpenRequestDetailHeader"
        android:id="@+id/recycler_checkbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/dialog_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/dialog_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="end">

        <TextView
            android:id="@+id/dialog_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_shape_filled"
            android:drawablePadding="8dp"
            android:foreground="?attr/selectableItemBackground"
            android:paddingStart="12dp"
            android:paddingTop="8dp"
            android:paddingEnd="12dp"
            android:paddingBottom="8dp"
            android:text="Submit"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="#fff"/>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>