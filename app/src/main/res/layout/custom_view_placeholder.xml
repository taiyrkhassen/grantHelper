<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="250dp"
        android:layout_marginTop="7dp"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:id="@+id/animation_view"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/car"
        android:layout_marginBottom="7dp"/>


    <TextView
        android:id="@+id/textViewCustomViewPlaceHolderTitle"
        android:padding="8dp"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="#020202"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:text="Нет подключения к интернету"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textViewCustomViewPlaceHolderDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="5"
        android:layout_gravity="center"
        android:textStyle="italic"
        android:gravity="center|top"/>

    <TextView
        android:id="@+id/buttonCustomViewPlaceHolderAction"
        android:layout_marginTop="16dp"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        android:paddingEnd="16dp"
        android:gravity="center"
        android:background="@drawable/rounded_shape_filled"
        android:paddingStart="16dp"
        android:text="Повторить"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"/>

</LinearLayout>